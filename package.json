{
  "name": "mr.koa",
  "version": "0.9.5",
  "description": "The most beautiful koa boilerplate.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint 'src/**/*.ts' 'test/**/*.ts'",
    "test": "npm run specs && jest",
    "test:coverage": "npm run specs && jest --coverage",
    "test:watch": "npm run specs && jest --watch",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "start": "node index.js",
    "db:create": "sequelize db:create",
    "db:create:test": "sequelize db:create --env test",
    "db:migrate": "sequelize db:migrate",
    "db:migrate:test": "sequelize db:migrate --env test",
    "build": "npm run specs && tsc --project tsconfig.production.json && npm run db:migrate",
    "build:check": "npm run specs && tsc --noEmit",
    "specs": "cp specs/header.yaml.tpl specs/header.yaml && mkdir -p src/types/Api && tinyspec --json --add-nulls -o specs/ && sw2dts specs/openapi.json -o src/types/Api/index.d.ts -n Api",
    "dot-only-hunter": "dot-only-hunter test",
    "postinstall": "husky install",
    "unused-exports": "ts-unused-exports tsconfig.json"
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@types/bluebird": "^3.5.35",
    "@types/json-schema": "^7.0.7",
    "@types/validator": "^13.1.3",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "dotenv": "^8.6.0",
    "glob": "^7.1.7",
    "i18n": "^0.12.0",
    "json-schema-deref-sync": "^0.14.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.1",
    "koa-qs": "^3.0.0",
    "koa-router": "^8.0.8",
    "lodash": "^4.17.21",
    "mr-error": "^0.7.1",
    "mr-use-case": "^0.8.0",
    "nyc": "^15.1.0",
    "pg": "^8.6.0",
    "pg-hstore": "^2.3.3",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.6.2",
    "sw2dts": "^2.6.3",
    "validator": "^13.6.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.1",
    "@types/faker": "^5.5.5",
    "@types/glob": "^7.1.3",
    "@types/i18n": "^0.12.0",
    "@types/jest": "^26.0.23",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/koa": "^2.13.1",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-json": "^2.0.18",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-qs": "^2.0.0",
    "@types/koa-router": "^7.4.2",
    "@types/koa__cors": "^3.0.2",
    "@types/lodash": "^4.14.170",
    "@types/node": "^13.13.52",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "ajv": "^6.12.6",
    "dot-only-hunter": "^1.0.3",
    "eslint": "^7.27.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.23.3",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-sonarjs": "^0.5.0",
    "faker": "^4.1.0",
    "husky": "^5.2.0",
    "jest": "^26.6.3",
    "nock": "^13.0.11",
    "prettier": "^2.3.0",
    "sequelize-cli": "^6.2.0",
    "supertest": "^6.1.3",
    "tinyspec": "^2.4.9",
    "ts-jest": "^26.5.6",
    "ts-node": "^8.10.2",
    "ts-unused-exports": "^7.0.3",
    "typescript": "^3.9.9"
  },
  "keywords": [
    "koa",
    "boilerplate"
  ],
  "author": "Ilia Donskikh",
  "license": "ISC"
}
