{
  "name": "mr.koa",
  "version": "0.9.9",
  "description": "The most beautiful koa boilerplate.",
  "main": "index.js",
  "engines": {
    "node": "16.x",
    "npm": "8.x"
  },
  "scripts": {
    "lint": "eslint 'src/**/*.ts' 'test/**/*.ts'",
    "test": "npm run specs && jest",
    "test:coverage": "npm run specs && jest --coverage",
    "test:watch": "npm run specs && jest --watch",
    "dev": "npm run specs && nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "start": "node index.js",
    "db:create": "sequelize db:create",
    "db:create:test": "sequelize db:create --env test",
    "db:migrate": "sequelize db:migrate",
    "db:migrate:test": "sequelize db:migrate --env test",
    "build": "npm run specs && tsc --project tsconfig.production.json && npm run db:migrate",
    "build:check": "npm run specs && tsc --noEmit",
    "specs": "mkdir -p src/types/api && openapi-typescript specs/openapi.json --output src/types/api/index.d.ts",
    "dot-only-hunter": "dot-only-hunter test",
    "postinstall": "husky install",
    "unused-exports": "ts-unused-exports tsconfig.json --excludePathsFromReport=src/types/api"
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@types/bluebird": "^3.5.36",
    "@types/json-schema": "^7.0.9",
    "@types/validator": "^13.7.1",
    "ajv": "^8.9.0",
    "bcrypt": "^5.0.1",
    "dotenv": "^12.0.4",
    "i18n": "^0.13.4",
    "json-schema-deref-sync": "^0.14.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.1",
    "koa-qs": "^3.0.0",
    "koa-router": "^10.1.1",
    "lodash": "^4.17.21",
    "mr-error": "^0.7.3",
    "mr-use-case": "^0.8.1",
    "nyc": "^15.1.0",
    "openapi-typescript": "^5.1.0",
    "openapi-jsonschema-parameters": "^10.0.0",
    "pg": "^8.7.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.13.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/faker": "^5.5.9",
    "@types/i18n": "^0.13.2",
    "@types/jest": "^27.4.0",
    "@types/jest-json-schema": "^2.1.4",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/koa": "^2.13.4",
    "@types/koa__cors": "^3.1.1",
    "@types/koa-bodyparser": "^4.3.5",
    "@types/koa-json": "^2.0.20",
    "@types/koa-logger": "^3.1.2",
    "@types/koa-qs": "^2.0.0",
    "@types/koa-router": "^7.4.4",
    "@types/lodash": "^4.14.170",
    "@types/node": "^17.0.8",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "dot-only-hunter": "^1.0.3",
    "eslint": "^8.7.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^25.3.4",
    "eslint-plugin-sonarjs": "^0.11.0",
    "faker": "5.5.3",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "jest-json-schema": "^6.0.0",
    "nock": "^13.2.2",
    "openapi-types": "^10.0.0",
    "prettier": "^2.5.1",
    "sequelize-cli": "^6.3.0",
    "supertest": "^6.2.1",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "ts-unused-exports": "^7.0.3",
    "typescript": "^4.5.4"
  },
  "keywords": [
    "koa",
    "boilerplate"
  ],
  "author": "Ilia Donskikh",
  "license": "ISC"
}
